{
  "compilerOptions": {
    "target": "es6",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": false,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "moduleResolution":"node",
    "jsx": "preserve",
    "rootDirs": ["."],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "components/*": ["./components/*"],
      "sass/*": ["./sass/*"],
      "static/*": ["./static/*"],
    }
  },
  "include": [
    "next-env.d.ts",
    "renderer/**/*.ts",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": [
    "node_modules"
  ]
}
